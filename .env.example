# Configuration des variables d'environnement pour Aurora50
# Copier ce fichier vers .env.local et remplir les valeurs

# Stripe
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PAYMENT_LINK_ID=plink_YOUR_PAYMENT_LINK_ID

# Brevo (Sendinblue)
BREVO_API_KEY=YOUR_BREVO_API_KEY
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Your App Name
BREVO_LIST_ID=YOUR_LIST_ID

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# Application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Mode développement - Authentification simulée
# Mettre à true pour activer le mode dev avec auth mockée
# Mettre à false ou supprimer pour utiliser l'authentification réelle
NEXT_PUBLIC_USE_DEV_AUTH=false
